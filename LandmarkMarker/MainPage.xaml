<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandmarkMarker.MainPage"
             Title="برنامج حساب المساحة">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="تراجع"
          Clicked="btnUndo_Clicked"
          Order="Secondary"/>
        <ToolbarItem Text="مسح"
          Clicked="OnClearClicked"
          Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <Grid Padding="15" ColumnDefinitions="*" RowDefinitions="*,auto">
        <!-- GraphicsView لرسم المعلم -->
        <GraphicsView x:Name="graphicsView"
                      Grid.Column="0"
                      Grid.Row="0"
                      Drawable="{Binding GridDrawable}">
            <GraphicsView.GestureRecognizers>
                <!-- TapGestureRecognizer لمعالجة الضغط -->
                <TapGestureRecognizer Tapped="OnTapped" />
            </GraphicsView.GestureRecognizers>
        </GraphicsView>
        <Border
            Grid.Column="0"
            Grid.Row="1" 
            Padding="10">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="X = " VerticalOptions="Center"/>
                    <Border Padding="0">
                        <Entry x:Name="PointX" MinimumHeightRequest="30" HeightRequest="35" Keyboard="Numeric"/>
                    </Border>
                        <Label Text="Y = " VerticalOptions="Center"/>
                    <Border Padding="0">
                        <Entry x:Name="PointY" MinimumHeightRequest="30" HeightRequest="35" Keyboard="Numeric"/>
                    </Border>
                    <Label Text="Area = " VerticalOptions="Center"/>
                    <Label x:Name="lblArea" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="اضافة" Clicked="OnDrawClicked" WidthRequest="70" HeightRequest="50" Padding="0"/>                    
                </HorizontalStackLayout>
            </VerticalStackLayout>            
        </Border>
    </Grid>

</ContentPage>
